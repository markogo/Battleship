@page
@model WebApp.Pages.Players.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Player.PlayerId" />
            <div class="form-group">
                <label asp-for="Player.Name" class="control-label"></label>
                <input asp-for="Player.Name" class="form-control" />
                <span asp-validation-for="Player.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Player.PlayerTurn" /> @Html.DisplayNameFor(model => model.Player.PlayerTurn)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Player.PlayerTypeEnum" class="control-label"></label>
                <select asp-for="Player.PlayerTypeEnum" class="form-control"></select>
                <span asp-validation-for="Player.PlayerTypeEnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.GameId" class="control-label"></label>
                <select asp-for="Player.GameId" class="form-control" asp-items="ViewBag.GameId"></select>
                <span asp-validation-for="Player.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
